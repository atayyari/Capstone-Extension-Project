{
    "manifest_version": 3,
    "name": "Accessibility Extension", 
    "description": "A suite of accessibility features.", 
    "version": "0.1", 
    "author": "Ali, Garet, and Spencer",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "background": {
        "service_worker": "background.js" 
        
    },

    "action": {
        
        "default_popup": "popup.html",
        "default_title": "Accessibility Extension"
    },

    "permissions": [
        "storage",
        "contextMenus",
        "tts"
    ],

    "options_ui": {
    "page": "options.html",
    "open_in_tab": true
    }
}
